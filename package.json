{
	"name": "grapher",
	"version": "1.4.3",
	"description": "GraphQL API server",
	"main": "index.js",
	"repository": "https://github.com/vstadnyk/grapher.git",
	"author": "Vladimir Stadnik <namirif@gmail.com>",
	"license": "MIT",
	"scripts": {
		"rdb": "rethinkdb create --config-file rethinkdb.conf",
		"rdb-dump": "rethinkdb dump -c localhost:28015 -f rdb-dump.tar.gz",
		"rdb-restore": "rethinkdb restore rdb-dump.tar.gz",
		"pg-dump": "pg_dump arckane > db.sql",
		"pg-restore": "psql arckane < db.sql",
		"clear": "rimraf ./dist ./rethinkdb.log ./error.log",
		"build": "babel -d ./dist ./server -s",
		"start": "yarn lint && yarn build && PORTS=[3000,3443,3050] node ./dist/index",
		"dev": "PORTS=[3000,3443,3050] node ./server/index",
		"setup": "node ./setup",
		"lint": "eslint ./server"
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"targets": {
						"node": "current"
					}
				}
			]
		],
		"plugins": [
			"syntax-dynamic-import",
			"dynamic-import-node"
		]
	},
	"eslintConfig": {
		"root": true,
		"parser": "babel-eslint",
		"parserOptions": {
			"ecmaVersion": 2017,
			"sourceType": "module",
			"allowImportExportEverywhere": true
		},
		"plugins": [
			"graphql"
		],
		"extends": [
			"airbnb-base",
			"prettier"
		],
		"env": {
			"node": true
		},
		"rules": {
			"class-methods-use-this": 0,
			"no-underscore-dangle": 0,
			"no-console": 0,
			"camelcase": 0,
			"no-await-in-loop": 0,
			"no-param-reassign": 0,
			"no-restricted-syntax": 0,
			"lines-between-class-members": 0
		}
	},
	"dependencies": {
		"@google/maps": "^0.5.3",
		"@koa/cors": "2",
		"apollo-server-koa": "^1.3.6",
		"babel-core": "^6.26.0",
		"babel-polyfill": "^6.26.0",
		"download": "^7.0.0",
		"eslint-plugin-graphql": "^2.1.1",
		"eslint-plugin-import": "^2.12.0",
		"file-type": "^8.0.0",
		"firebase-admin": "^5.12.1",
		"glob": "^7.1.2",
		"graphql": "^0.13.2",
		"graphql-fields": "^1.0.2",
		"graphql-playground-html": "^1.6.0",
		"graphql-subscriptions": "^0.5.8",
		"graphql-tag": "^2.6.1",
		"graphql-tools": "^3.0.2",
		"inflected": "^2.0.4",
		"jsonwebtoken": "^8.3.0",
		"koa": "^2.4.1",
		"koa-body": "^4.0.1",
		"koa-passport": "^4.1.0",
		"koa-router": "^7.3.0",
		"koa-static": "^5.0.0",
		"moment": "^2.22.2",
		"nodemailer": "^4.6.6",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"password-generator": "^2.2.0",
		"pg": "^7.4.1",
		"pg-hstore": "^2.3.2",
		"sequelize": "^4.37.10",
		"shelljs": "^0.8.1",
		"subscriptions-transport-ws": "^0.9.10",
		"thinky": "^2.3.9",
		"vue": "^2.5.13",
		"vue-server-renderer": "^2.5.13"
	},
	"devDependencies": {
		"apollo-codegen": "^0.20.2",
		"babel-cli": "^6.26.0",
		"babel-eslint": "^8.2.1",
		"babel-plugin-dynamic-import-node": "^2.0.0",
		"babel-preset-env": "^1.7.0",
		"eslint": "^5.0.1",
		"eslint-config-airbnb-base": "^13.0.0",
		"eslint-config-prettier": "^2.9.0",
		"rimraf": "^2.6.2"
	}
}
